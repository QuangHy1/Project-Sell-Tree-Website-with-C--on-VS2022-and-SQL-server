@model Project_63133174.Models.Register_63133174
@{
    Layout = null;
    <link rel="stylesheet" href="~/Content/Account/Register.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}

<div style="background-image: url(../Images/login.jpg); min-height: 100%; ">
    @using (Html.BeginForm("Register", "Account_63133174", FormMethod.Post))
    {

        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-2"></div>
                <div class="col-lg-6 col-md-8 login-box " style="min-height: 100%; margin-top: 50px; background-image: url(/Images/login2.jpg);" >
                    <div class="col-lg-12 login-key">
                        <i class="fa fa-key" aria-hidden="true"></i>
                    </div>
                    <div class="col-lg-12 login-title" style="margin-top:1px;">
                        <p style="font-size: 30px; color: #a7ff48;">ĐĂNG KÍ</p>
                    </div>

                    <div class="col-lg-12 login-form">
                        <div class="col-lg-12 login-form">
                            <form>
                                <!--Họ tên-->
                                <div class="form-group">
                                    <label class="form-control-label" style="padding-right: 34px;">@Html.LabelFor(temp => temp.HoTen, "Họ và tên:", new { @class = "control-label" })</label>
                                    @Html.TextBoxFor(temp => temp.HoTen, new { @class = "login__input" })
                                    <br />
                                    @Html.ValidationMessageFor(temp => temp.HoTen, "", new { @class = "text-danger" })
                                </div>
                                <!--Số điện thoại-->
                                <div class="form-group">
                                    <label class="form-control-label" style="padding-right: 13px;">@Html.LabelFor(temp => temp.SDT, "Số điện thoại:", new { @class = "control-label" })</label>
                                    @Html.TextBoxFor(temp => temp.SDT, new { @class = "login__input" })
                                    <br />
                                    @Html.ValidationMessageFor(temp => temp.SDT, "", new { @class = "text-danger" })
                                </div>
                                <!--Địa chỉ-->
                                <div class="form-group">
                                    <label class="form-control-label" style="padding-right: 49px;">@Html.LabelFor(temp => temp.DiaChi, "Địa chỉ:", new { @class = "control-label" })</label>
                                    @Html.TextBoxFor(temp => temp.DiaChi, new { @class = "login__input" })
                                    <br />
                                    @Html.ValidationMessageFor(temp => temp.DiaChi, "", new { @class = "text-danger" })
                                </div>
                                <!--Email-->
                                <div class="form-group">
                                    <label class="form-control-label" style="padding-right: 56px;"  >@Html.LabelFor(temp => temp.Email, "Email:", htmlAttributes: new { @class = "control-label" })</label>
                                    @Html.TextBoxFor(temp => temp.Email, new { @class = "login__input" })
                                    <br />
                                    @Html.ValidationMessageFor(temp => temp.Email, "", new { @class = "text-danger" })
                                </div>
                                <!--Mật khẩu-->
                                <div class="form-group">
                                    <label class="form-control-label" style="padding-right: 58px;"> @Html.LabelFor(temp => temp.MatKhau, "Mật khẩu:", htmlAttributes: new { @class = "control-label" })</label>
                                    @Html.PasswordFor(temp => temp.MatKhau, new { @class = "login__input" })
                                    <br />
                                    @Html.ValidationMessageFor(temp => temp.MatKhau, "", new { @class = "text-danger" })
                                </div>
                                <!-- Xác nhận mật khẩu-->
                                <div class="form-group">
                                    <label class="form-control-label"> @Html.LabelFor(temp => temp.ConfirmMatKhau, "Xác nhận mật khẩu:", new { @class = "control-label" })</label>
                                    @Html.PasswordFor(temp => temp.ConfirmMatKhau, new { @class = "login__input" })
                                    <br />
                                    @Html.ValidationMessageFor(temp => temp.ConfirmMatKhau, "", new { @class = "text-danger" })
                                </div>


                                <div class="col-lg-12 loginbttm">
                                    <div class="col-lg-6 login-btm login-text">
                                        <!-- Error Message -->
                                    </div>
                                    <div>
                                        <div class="col-lg-12 login-btm login-button">
                                            <button type="submit" class="btn btn-outline" style="color: #ECF0F5; width: 430px;"> XÁC NHẬN ĐĂNG KÍ</button>
                                        </div>
                                        <div class="col-lg-12 login-btm login-button">
                                            <a href="@Url.Action("Login", "Account_63133174")">
                                                <button type="button" class="btn btn-outline" style="color: #ECF0F5; width: 430px;"> QUAY LẠI</button>
                                            </a>
                                           
                                        </div>
                                    </div>

                                </div>

                            </form>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-2"></div>
                </div>
            </div>
        </div>
    }
</div>